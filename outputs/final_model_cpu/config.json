{
  "data": {
    "train_path": "data\\processed\\train_data.jsonl",
    "eval_path": null,
    "max_length": 1024
  },
  "model": {
    "base_model": "TinyLlama/TinyLlama-1.1B-Chat-v1.0",
    "device_map": "cpu",
    "padding_side": "left",
    "trust_remote_code": true
  },
  "lora": {
    "r": 16,
    "alpha": 32,
    "dropout": 0.1,
    "target_modules": [
      "q_proj",
      "k_proj",
      "v_proj",
      "o_proj",
      "gate_proj",
      "up_proj",
      "down_proj"
    ],
    "bias": "none"
  },
  "training": {
    "output_dir": "outputs\\final_model_cpu",
    "num_epochs": 5,
    "batch_size": 1,
    "gradient_accumulation_steps": 4,
    "learning_rate": 0.0002,
    "warmup_steps": 100,
    "logging_steps": 10,
    "save_steps": 100,
    "eval_steps": 100,
    "use_fp16": false,
    "save_total_limit": 3,
    "max_grad_norm": 1.0
  }
}